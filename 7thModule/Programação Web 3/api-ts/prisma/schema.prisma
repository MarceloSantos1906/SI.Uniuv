generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Books {
    booksId       Int       @id @default(autoincrement())
    name          String
    publisher     String
    publish_date  DateTime
    registered_at DateTime  @default(now())
    genres        Genres[]
    authors       Authors[]

    @@map("books")
}

model Genres {
    genreId      Int      @id @default(autoincrement())
    genre        String
    registerDate DateTime @default(now())
    books        Books[]

    @@map("genres")
}

model Authors {
    authorId     Int      @id @default(autoincrement())
    name         String
    registerDate DateTime @default(now())
    books        Books[]

    @@map("authors")
}
