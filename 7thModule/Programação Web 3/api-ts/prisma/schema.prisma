// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Books {
    booksId       String    @id @default(uuid())
    name          String
    publisher     String
    publish_date  DateTime
    registered_at DateTime  @default(now())
    genres        Genres[]
    authors       Authors[]

    @@map("books")
}

model Genres {
    genreId      String   @id @default(uuid())
    genre        String
    registerDate DateTime @default(now())
    books        Books[]

    @@map("genres")
}

model Authors {
    authorId     String   @id @default(uuid())
    name         String
    registerDate DateTime @default(now())
    books        Books[]

    @@map("authors")
}
